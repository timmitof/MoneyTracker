<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_recent_transactions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:backgroundTint="@color/red20"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_gravity="center"
            tools:tint="@color/red100"
            tools:src="@drawable/expense_second"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recent_transaction_title"
        style="@style/Regular_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/card_item_recent_transactions"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/recent_transaction_description"
        style="@style/Tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark25"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_item_recent_transactions"
        tools:text="Description" />

    <TextView
        android:id="@+id/recent_transaction_sum"
        style="@style/Regular_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-200"
        android:textColor="@color/red100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/recent_transaction_time"
        style="@style/Tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark25"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="00:00" />

</androidx.constraintlayout.widget.ConstraintLayout>